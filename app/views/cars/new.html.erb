<div class="container">
  <%= form_with(model: [current_user, @car]) do |form| %>
    <!-- Form fields for car attributes -->
    <div class= "form-group">


    <div class="form-group">
      <%= form.label :nickname %>
      <%= form.text_field :nickname, placeholder: "Ex. Mom's Car", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :year %>
      <span class="text-danger">*</span>
      <%= form.number_field :year, class: "form-control", required: true %>
    </div>


      <%= form.label :make %>
      <span class="text-danger">*</span>
      <%= form.text_field :make, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :model %>
      <span class="text-danger">*</span>
      <%= form.text_field :model, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :photo %>
      <%= form.file_field :photo, class:"form-control"%>


      <div class="form-group">
      <%= form.label :oil_change_interval %>
      <span class="text-danger">*</span>
      <%= form.number_field :oil_change_interval, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :odometer %>
      <span class="text-danger">*</span>
      <%= form.number_field :odometer, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :last_oil_change %>
      <span class="text-danger">*</span>
      <%= form.number_field :last_oil_change, class: "form-control", required: true %>
    </div>

    <br>

    



    <div>
      <%= form.submit "Add Vehicle", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


