<div class="container">
  <%= form_with(model: [current_user, @car]) do |form| %>
    <!-- Form fields for car attributes -->
    <div class= "form-group">
      <%= form.label :make %>
      <%= form.text_field :make, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :model %>
      <%= form.text_field :model, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :year %>
      <%= form.number_field :year, class: "form-control" %>
    </div>

      <div class="form-group">
      <%= form.label :oil_change_interval %>
      <%= form.number_field :oil_change_interval, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :odometer %>
      <%= form.number_field :odometer, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :last_oil_change %>
      <%= form.number_field :last_oil_change, class: "form-control" %>
    </div>

    <br>

    



    <div>
      <%= form.submit "Add Vehicle", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


