<div id="<%= dom_id car %>">





<div class="card card w-100 p-4 mb-3" style="width: 18rem;">
  <div class="card-body">
    <% if car.photo.attached? %>
      <%= image_tag car.photo.variant(resize_to_limit: [200,200]), class: "img-thumbnail", alt: "Photo here" %>
    <% else %>
      <p> None </p>
    <%end%>

    <br>
    <br>

    <h4 class="card-title"><%= link_to car.make, user_car_path(current_user, car), style: "text-decoration: none;" %></h4>
    <h5 class="card-text"><%= car.model %></h5>
    <h5 class="card-text"><%= car.year %></h5>
  
    
    <% if car.oil_change_due? %>
      <p style = "color: red; font-weight: bold;"> Oil Change is Due! </p>
    <% else %>


    
    <%end%>

  </div>
</div>

