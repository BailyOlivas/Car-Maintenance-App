<h2>Sign Up</h2>

<%= form_with model: @user, url: users_path do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :email_address %>
    <%= form.email_field :email_address, required: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>



  <%= form.submit "Sign Up" %>
<% end %>

<%= link_to "Already have an account? Login", new_session_path %>